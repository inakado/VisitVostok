{
  "version": 8,
  "name": "VisitVostok PMTiles Style",
  "glyphs": "/font/{fontstack}/{range}.pbf",
  "sources": {
    "mytiles": {
      "type": "vector",
      "url": "pmtiles://https://s3.ru1.storage.beget.cloud/b8118b5036f9-vv-map/pm-tiles-area/my_area.pmtiles",
      "minzoom": 0,
      "maxzoom": 15
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": { "background-color": "#f0f2f8" }
    },
    {
      "id": "water-fill",
      "type": "fill",
      "source": "mytiles",
      "source-layer": "water",
      "filter": ["==", "$type", "Polygon"],
      "paint": {
        "fill-color": "#A5C9EA",
        "fill-opacity": 0.8
      }
    },
    {
      "id": "water-streams",
      "type": "line",
      "source": "mytiles",
      "source-layer": "water",
      "filter": [
        "any",
        ["==", ["geometry-type"], "LineString"],
        ["==", ["geometry-type"], "MultiLineString"]
      ],
      "paint": {
        "line-color": "#A5C9EA",
        "line-width": ["interpolate", ["linear"], ["zoom"], 8, 1, 15, 3, 20, 5]
      }
    },
    
    {
      "id": "landcover",
      "type": "fill",
      "source": "mytiles",
      "source-layer": "landcover",
      "paint": {
        "fill-color": [
          "match",
          ["get", "kind"],
          "wood", "#8FC494",
          "forest", "#8FC494", 
          "grassland", "#D4F1D4",
          "wetland", "#B8E6D3",
          "#F5F5F5"
        ]
      }
    },
    {
      "id": "parks",
      "type": "fill",
      "source": "mytiles",
      "source-layer": "landuse",
      "filter": ["==", ["get", "kind"], "park"],
      "paint": { "fill-color": "#A8D8A8" }
    },
    {
      "id": "beaches",
      "type": "fill",
      "source": "mytiles",
      "source-layer": "landcover",
      "filter": ["==", ["get", "kind"], "sand"],
      "paint": { "fill-color": "#FFF8DC" }
    },
    {
      "id": "buildings",
      "type": "fill",
      "source": "mytiles",
      "source-layer": "buildings",
      "minzoom": 15,
      "paint": {
        "fill-color": "#E8E8E8",
        "fill-outline-color": "#2C3347"
      }
    },
    {
      "id": "roads-base",
      "type": "line",
      "source": "mytiles",
      "source-layer": "roads",
      "layout": { "line-join": "round", "line-cap": "round" },
      "paint": {
        "line-color": "#ffffff",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          8, 0.5, 12, 1.5, 16, 4, 20, 8
        ],
        "line-opacity": 0.9
      }
    },
    {
      "id": "roads-path",
      "type": "line",
      "source": "mytiles",
      "source-layer": "roads",
      "filter": ["==", ["get", "kind"], "path"],         
      "layout": { "line-cap": "round", "line-join": "round" },
      "paint": {
        "line-color": "#BC8E3F",                        
        "line-dasharray": ["literal", [2, 3]],  
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          14, 0.6,
          18, 2,
          20, 2.0
        ],
        "line-opacity": 0.9
      }
    },
    {
      "id": "roads-steps",
      "type": "line",
      "source": "mytiles",
      "source-layer": "roads",
      "filter": ["all",
        ["==", ["get", "kind"], "path"],
        ["==", ["get", "kind_detail"], "steps"]
      ],
      "layout": { "line-cap": "round", "line-join": "round" },
    
      "paint": {
        "line-color": "#9FA4AD",
        "line-dasharray": ["literal", [2, 3]],
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          14, 0.6,
          18, 2,
          20, 2
        ],
        "line-opacity": 0.9
      }
    },
    {
      "id": "roads-footway",
      "type": "line",
      "source": "mytiles",
      "source-layer": "roads",
      "filter": ["all",
        ["==", ["get", "kind_detail"], "footway"]
      ],
      "layout": { "line-cap": "round", "line-join": "round" },
      "paint": {
        "line-color": "#BC8E3F",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          14, 0.5,
          18, 2,
          20, 2
        ],
        "line-opacity": 0.9
      }
    },
    {
      "id": "roads-service",
      "type": "line",
      "source": "mytiles",
      "source-layer": "roads",
      "filter": ["all",
        ["==", ["get", "kind"], "minor_road"],
        ["==", ["get", "kind_detail"], "service"]
      ],
      "layout": { "line-cap": "round", "line-join": "round" },
      "paint": {
        "line-color": "#DADADA",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          12, 0.8,
          16, 2,
          20, 4
        ]
      }
    },
    {
      "id": "roads-residential",
      "type": "line",
      "source": "mytiles",
      "source-layer": "roads",
      "filter": ["all",
        ["==", ["get", "kind"], "minor_road"],
        ["==", ["get", "kind_detail"], "residential"]
      ],
      "layout": { "line-cap": "round", "line-join": "round" },
    
      "paint": {
        "line-color": "#D3DAE3",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          12, 0.8,
          16, 2,
          20, 4.5
        ],
        "line-opacity": 0.9
      }
    },
    {
      "id": "roads-unclassified",
      "type": "line",
      "source": "mytiles",
      "source-layer": "roads",
      "filter": ["all",
        ["==", ["get", "kind"], "minor_road"],
        ["==", ["get", "kind_detail"], "unclassified"]
      ],
      "layout": { "line-cap": "round", "line-join": "round" },
    
      "paint": {
        "line-color": "#C8CFD8",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          12, 0.8,
          16, 2,
          20, 4.5
        ],
        "line-opacity": 0.9
      }
    },
    {
      "id": "roads-rail",
      "type": "line",
      "source": "mytiles",
      "source-layer": "roads",
      "filter": ["==", ["get", "kind"], "rail"],
      "layout": { "line-cap": "round", "line-join": "round" },
      "paint": {
        "line-color": "#5966A5",                         
        "line-dasharray": ["literal", [6, 3]],  
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          8, 0.3,
          12, 1,
          16, 2,
          20, 3
        ],
        "line-opacity": 0.9
      }
    },
    {
      "id": "roads-major-casing",
      "type": "line",
      "source": "mytiles",
      "source-layer": "roads",
      "filter": ["==", ["get", "kind"], "major_road"],
      "layout": { "line-cap": "round", "line-join": "round" },
      "paint": {
        "line-color": "#2C3347",  
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          8, 1.2,   
          12, 3,
          16, 7,
          20, 13
        ]
      }
    },
    {
      "id": "roads-major",
      "type": "line",
      "source": "mytiles",
      "source-layer": "roads",
      "filter": ["==", ["get", "kind"], "major_road"],
      "layout": { "line-join": "round", "line-cap": "round" },
      "paint": {
        "line-color": "#FCE57B",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          8, 0.8, 12, 2, 16, 6, 20, 12
        ]
      }
    },
    {
      "id": "sea-routes",
      "type": "line",
      "source": "mytiles",
      "source-layer": "roads",
      "minzoom": 5, 
      "filter": ["in", ["get", "kind"],
                "ferry"],
      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },
      "paint": {
        "line-color": "#4A90E2",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          5,  0.5,
          10, 1,
          14, 2,
          20, 4
        ],
        "line-opacity": 0.9
      }
    },
    {
      "id": "road-labels",
      "type": "symbol",
      "source": "mytiles",
      "source-layer": "roads",
      "filter": ["has", "name"],
      "minzoom": 12,
      "layout": {
        "symbol-placement": "line",
        "symbol-spacing": 300,
        "text-field": ["get", "name"],
        "text-font": ["Noto Sans Regular"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 12, 11, 18, 16, 20, 20]
      },
      "paint": {
        "text-color": "#2C3347",
        "text-halo-color": "#FFFFFF",
        "text-halo-width": 1.5
      }
    },
    {
      "id": "place-labels",
      "type": "symbol",
      "source": "mytiles",
      "source-layer": "places",
      "minzoom": 8,
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Noto Sans Bold"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 8, 12, 18, 20, 20, 24],
        "text-anchor": "center"
      },
      "paint": {
        "text-color": "#2C3347",
        "text-halo-color": "#FFFFFF",
        "text-halo-width": 2
      }
    }
  ]
}