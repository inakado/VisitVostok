{
  "version": 8,
  "name": "VisitVostok PMTiles Style",
  "glyphs": "/font/{fontstack}/{range}.pbf",
  "sources": {
    "mytiles": {
      "type": "vector",
      "url": "pmtiles://https://s3.ru1.storage.beget.cloud/b8118b5036f9-vv-map/pm-tiles-area/my_area.pmtiles",
      "minzoom": 0,
      "maxzoom": 20
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": { "background-color": "#f0f2f8" }
    },
    {
      "id": "water-fill",
      "type": "fill",
      "source": "mytiles",
      "source-layer": "water",
      "filter": ["==", "$type", "Polygon"],
      "paint": {
        "fill-color": "#A5C9EA",
        "fill-opacity": 0.8
      }
    },
    {
      "id": "water-streams",
      "type": "line",
      "source": "mytiles",
      "source-layer": "water",
      "filter": [
        "any",
        ["==", ["geometry-type"], "LineString"],
        ["==", ["geometry-type"], "MultiLineString"]
      ],
      "paint": {
        "line-color": "#A5C9EA",
        "line-width": ["interpolate", ["linear"], ["zoom"], 8, 1, 15, 3, 20, 5]
      }
    },
    {
      "id": "landcover",
      "type": "fill",
      "source": "mytiles",
      "source-layer": "landcover",
      "paint": {
        "fill-color": [
          "match",
          ["get", "kind"],
          "wood", "#8FC494",
          "forest", "#8FC494", 
          "grassland", "#D4F1D4",
          "wetland", "#B8E6D3",
          "#F5F5F5"
        ]
      }
    },
    {
      "id": "parks",
      "type": "fill",
      "source": "mytiles",
      "source-layer": "landuse",
      "filter": ["==", ["get", "kind"], "park"],
      "paint": { "fill-color": "#A8D8A8" }
    },
    {
      "id": "beaches",
      "type": "fill",
      "source": "mytiles",
      "source-layer": "landcover",
      "filter": ["==", ["get", "kind"], "sand"],
      "paint": { "fill-color": "#FFF8DC" }
    },
    {
      "id": "buildings",
      "type": "fill",
      "source": "mytiles",
      "source-layer": "buildings",
      "minzoom": 15,
      "paint": {
        "fill-color": "#E8E8E8",
        "fill-outline-color": "#2C3347"
      }
    },
    {
      "id": "roads_base",
      "type": "line",
      "source": "mytiles",
      "source-layer": "roads",
      "layout": {
        "line-join": "round",
        "line-cap": "round"
      },
      "paint": {
        "line-color": [
          "match",
          ["get", "kind"],
          ["motorway", "trunk", "primary", "secondary"], "#FFD700",
          "#ffffff"
        ],
        "line-width": [
          "interpolate",
          ["linear"],
          ["zoom"],
          8, 0.5,
          12, 1.5,
          16, 4,
          20, 8
        ],
        "line-opacity": 0.9
      }
    },
    {
      "id": "road-labels",
      "type": "symbol",
      "source": "mytiles",
      "source-layer": "roads",
      "filter": ["has", "name"],
      "minzoom": 12,
      "layout": {
        "symbol-placement": "line",
        "symbol-spacing": 300,
        "text-field": ["get", "name"],
        "text-font": ["Noto Sans Regular"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 12, 11, 18, 16, 20, 20]
      },
      "paint": {
        "text-color": "#2C3347",
        "text-halo-color": "#FFFFFF",
        "text-halo-width": 1.5
      }
    },
    {
      "id": "place-labels",
      "type": "symbol",
      "source": "mytiles",
      "source-layer": "places",
      "minzoom": 8,
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Noto Sans Bold"],
        "text-size": ["interpolate", ["linear"], ["zoom"], 8, 12, 18, 20, 20, 24],
        "text-anchor": "center"
      },
      "paint": {
        "text-color": "#2C3347",
        "text-halo-color": "#FFFFFF",
        "text-halo-width": 2
      }
    }
  ]
}