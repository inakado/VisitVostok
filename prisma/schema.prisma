generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(cuid())
  telegramId  String    @unique
  avatar      String?
  username    String?
  name        String
  avatarUrl   String?
  role        Role
  reviews     Review[]
  placesBeen  Place[]   @relation("VisitedPlaces")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Place {
  id          String    @id @default(cuid())
  title             String
  city              String?
  totalScore        Float?
  lat               Float
  lng               Float
  categoryName      String
  street            String?
  state             String
  reviewsCount      Int?
  imageUrl          String?
  price             String?
  address           String
  categories        String[]
  temporarilyClosed Boolean
  reviews     Review[]
  visitors    User[]    @relation("VisitedPlaces")
  createdAt   DateTime  @default(now())
}

model Review {
  id        String   @id @default(cuid())
  text      String
  rating    Int      @default(5)
  place     Place    @relation(fields: [placeId], references: [id])
  placeId   String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
}

enum Role {
  traveler
  local
}